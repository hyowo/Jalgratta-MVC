@model IEnumerable<Jalgratta_Eksam.Models.LubaViewModel>

@{
    ViewData["Title"] = "Luba";
}

<h1>Luba</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eesnimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perekonnanimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teooria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slaalom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tanav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Luba)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Eesnimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perekonnanimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teooria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slaalom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanav)
            </td>
            <td>
                @if (item.Luba == "Väljasta")
                {
                    <a asp-action="VäljastaLuba" asp-route-id ="@(item.ID)">Väljasta</a>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Luba)
                }
            </td>
        </tr>
}
    </tbody>
</table>
